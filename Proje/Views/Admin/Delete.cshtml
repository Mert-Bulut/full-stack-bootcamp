@model Kullanici

<p>
    <b> @Model.KullaniciAd @Model.KullaniciSoyad</b> isimli kullanıcı silmek istiyor musunuz?

    <form asp-action="Delete" method="post">
        <input type="hidden" value="@Model.KullaniciId" name="id">
        <button type="submit" class="btn btn-danger">Evet</button>
        <a asp-action="Index" class="btn btn-primary">Hayır</a>
    </form>
</p>