@model Kullanici

<h2>Kullanıcı Güncelleme</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Kullanici" asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="KullaniciAd" class="form-label">Adınız</label>
                <input asp-for="KullaniciAd" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="KullaniciSoyad" class="form-label">Soyadınız</label>
                <input asp-for="KullaniciSoyad" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control">
            </div>
            <div class="mb-3">
            <label asp-for="Sifre" class="form-label">Şifre</label>
            <input asp-for="Sifre" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
</div>

